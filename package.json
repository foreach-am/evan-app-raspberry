{
  "name": "@foreach-am/evan-app-raspberry",
  "version": "1.0.0",
  "private": true,
  "author": "forEach LLC",
  "license": "MIT",
  "description": "EVAN raspberry app.",
  "scripts": {
    "start": "bash ./scripts/app/run-development.sh",
    "build": "bash ./scripts/app/build-production.sh",
    "restart": "bash ./scripts/app/restart-production.sh",
    "postinstall": "bash ./scripts/hooks/package/post-install.sh",
    "prepare": "bash ./run-cmd.sh tool:husky:init",
    "lint": "bash ./run-cmd.sh tool:lint:execute:dev",
    "format": "bash ./run-cmd.sh tool:format:code && bash ./run-cmd.sh tool:format:scripts",
    "tool:app:env-check": "bash ./scripts/app/check-env.sh",
    "tool:husky:init": "bash ./scripts/tools/init-git-hooks.sh",
    "tool:sum-hash:build": "bash ./scripts/tools/sumhash-build.sh",
    "tool:sum-hash:check": "bash ./scripts/tools/sumhash-check.sh",
    "tool:lint:execute:dev": "bash ./scripts/tools/eslint-execute.sh dev",
    "tool:lint:execute:prod": "bash ./scripts/tools/eslint-execute.sh prod",
    "tool:format:code": "bash ./scripts/tools/format-code.sh",
    "tool:format:scripts": "bash ./scripts/tools/format-scripts.sh",
    "tool:update-macaddress": "bash ./scripts/tools/update-macaddress.sh"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "onoff": "^6.0.3",
    "pws": "^7.0.0",
    "rc522-rfid-promise": "^16.0.1",
    "serialport": "^10.4.0",
    "websocket": "^1.0.34",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.3",
    "@babel/plugin-proposal-export-default-from": "^7.18.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-umd": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/runtime": "^7.18.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "prettier-plugin-sh": "^0.11.0"
  }
}
